# 1. Disable directory browsing
Options -Indexes

# 2. Prevent access to the .htaccess file itself
<Files ".htaccess">
    Require all denied
</Files>

# 3. Prevent access to specific file types (like logs or backup files)
<FilesMatch "\.(log|bak|sql)$">
    Require all denied
</FilesMatch>

# Ensure PDFs are treated as viewable files
<FilesMatch "\.pdf$">
    ForceType application/pdf
    Header set Content-Disposition inline
</FilesMatch>